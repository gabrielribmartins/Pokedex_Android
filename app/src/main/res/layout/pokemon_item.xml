<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="16dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/ivPokemon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/charmander"
            android:contentDescription="@string/pokemon_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ImageContrastCheck" />

        <TextView
            android:id="@+id/tvNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/n_001"
            android:textColor="#8D6E63"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivPokemon"
            tools:text="NÂº 001" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/charmander"
            android:textColor="#313131"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvNumber"
            tools:text="Charmander" />

        <TextView
            android:id="@+id/tvType1"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="#fd7d24"
            android:gravity="center_horizontal"
            android:text="@string/fire"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="12sp"
            tools:ignore="MissingConstraints,TextContrastCheck"
            tools:layout_editor_absoluteX="72dp"
            tools:layout_editor_absoluteY="286dp"
            tools:text="Fire" />

        <TextView
            android:id="@+id/tvType2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="#fd7d24"
            android:gravity="center_horizontal"
            android:text="@string/firee"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="12sp"
            tools:ignore="MissingConstraints,TextContrastCheck"
            tools:layout_editor_absoluteX="207dp"
            tools:layout_editor_absoluteY="286dp"
            tools:text="Fire" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>